{
  "name": "pibelabs-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "analyze": "vite build --mode analyze",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "optimize:images": "npx svgo -f public/assets/images --multipass",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules package-lock.json",
    "docker:build": "docker build -t pibelabs-frontend:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t pibelabs-frontend:dev .",
    "docker:run": "docker run -d -p 80:80 pibelabs-frontend:latest",
    "docker:run:dev": "docker run -d -p 3000:3000 -v $(pwd):/app pibelabs-frontend:dev",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=pibelabs-frontend)",
    "docker:logs": "docker logs -f $(docker ps -q --filter ancestor=pibelabs-frontend)",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "framer-motion": "^11.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.50.0",
    "react-hot-toast": "^2.6.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.35",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vitest": "^4.0.6"
  }
}
