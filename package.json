{
  "name": "pibelabs-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='' npx vite --port 3000 --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "precommit": "npm run lint && npm run format:check && npm run type-check",
    "analyze": "vite build --mode analyze",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --reporter=verbose --no-coverage",
    "test:coverage": "vitest run --coverage",
    "optimize:images": "npx svgo -f public/assets/images --multipass",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules package-lock.json",
    "docker:build": "docker build -t pibelabs-frontend:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t pibelabs-frontend:dev .",
    "docker:run": "docker run -d -p 80:80 pibelabs-frontend:latest",
    "docker:run:dev": "docker run -d -p 3000:3000 -v $(pwd):/app pibelabs-frontend:dev",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=pibelabs-frontend)",
    "docker:logs": "docker logs -f $(docker ps -q --filter ancestor=pibelabs-frontend)",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "prepare": "husky install || true"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "bash -c 'if [[ \"$0\" != *\".test.\"* && \"$0\" != *\"/test/\"* ]]; then eslint --fix --max-warnings 0 \"$0\"; fi'",
      "prettier --write"
    ],
    "*.{css,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fontsource/orbitron": "^5.2.8",
    "@fontsource/poppins": "^5.2.7",
    "@fontsource/rajdhani": "^5.2.7",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-tooltip": "^1.2.8",
    "framer-motion": "^11.18.2",
    "i18next": "^25.6.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.552.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.66.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.2.4",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
